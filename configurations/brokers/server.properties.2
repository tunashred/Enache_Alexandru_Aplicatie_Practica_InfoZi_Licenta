# Basic Kafka broker configuration
broker.id=2
log.dirs=../../logs/broker_logs/logs-2

listeners=PLAINTEXT://0.0.0.0:9093,SSL_INTERNAL://0.0.0.0:9193,SSL_CLIENT://0.0.0.0:9293
advertised.listeners=PLAINTEXT://192.168.88.169:9093,SSL_INTERNAL://192.168.88.169:9193,SSL_CLIENT://192.168.88.169:9293
listener.security.protocol.map=PLAINTEXT:PLAINTEXT,SSL_INTERNAL:SSL,SSL_CLIENT:SSL
inter.broker.listener.name=SSL_INTERNAL

# SSL configuration for broker-to-broker communication
ssl.keystore.location=kafka-broker-2.keystore.jks
ssl.keystore.password=kafka123
ssl.key.password=kafka123
ssl.truststore.location=kafka-broker-2.truststore.jks
ssl.truststore.password=kafka123
ssl.client.auth=required
ssl.enabled.protocols=TLSv1.2,TLSv1.3
ssl.endpoint.identification.algorithm=
# Only use one of these two properties - using both causes an error
# security.inter.broker.protocol=SSL

# Zookeeper configuration
zookeeper.connect=localhost:2182
zookeeper.clientCnxnSocket=org.apache.zookeeper.ClientCnxnSocketNetty
zookeeper.ssl.client.enable=true
zookeeper.ssl.keystore.location=kafka-broker-2.keystore.jks
zookeeper.ssl.keystore.password=kafka123
zookeeper.ssl.truststore.location=kafka-broker-2.truststore.jks
zookeeper.ssl.truststore.password=kafka123

# Topics configuration
num.partitions=1
default.replication.factor=3
min.insync.replicas=2
